<Window
  x:Class="UConfApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ui="http://schemas.modernwpf.com/2019">
  <ui:SimpleStackPanel Orientation="Horizontal">
    <TextBlock Text="{Binding CounterValue}" FontSize="20" />
    <Button Command="{Binding Decrement}" Content="-" />
    <Button Command="{Binding Increment}" Content="+" />
    <TextBlock Text="{Binding StepSize}" FontSize="20" />
    <Slider Background="Brown" Value="{Binding StepSize}" TickFrequency="1" Minimum="1" Maximum="10" FontSize="20"
            Margin="20" Width="300" Height="50" />
  </ui:SimpleStackPanel>
</Window>
